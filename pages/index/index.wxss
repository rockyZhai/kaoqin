/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  font-size: 18px;
  text-align: center;
}
.commodity_attr_box .XGpwd{
  border-bottom: 1px solid #e0e0e0;
  height: 50px;
  line-height: 50px;
}
.commodity_attr_box .TClogin{
  height: 50px;
  line-height: 50px;
}
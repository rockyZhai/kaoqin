page{
  background-color: #f7f6fc;
}

.background {
  position: relative
}
.background .img{
  width:100%;
  height:340rpx;
  display:inline-block;
  overflow:hidden;
  vertical-align:top;
}
.background .photo{
  position: absolute;
  width: 144rpx;
  height: 144rpx;
  top: 70rpx;
  left: 40%;
  text-align: center;
  border-radius: 50%;
}
.background .photo image{
  width: 100%;
  height: 100%;
  overflow: hidden;
  vertical-align: top;
  border-radius:50%;
}
.background .photo text{
  font-size: 14px;
  color: #ffffff;
}
.announcement{
  height: 80rpx;
  background-color: #f8e4e4;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between; 
}
.announcement image{
  width: 28rpx;
  height: 32rpx;
  margin-right: 16rpx;
  vertical-align: middle;
  margin-left:22px;
}
.announcement .content{
   color: #333;
   font-size: 14px;
}
.announcement .time{
  color: #999;
  font-size: 12px;
  margin-right:20px;
}
.attendance{
  margin-bottom:16rpx;

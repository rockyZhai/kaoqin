/*修改密码  */

.background .img{
  width:100%;
  height:340rpx;
  display:inline-block;
  overflow:hidden;
  vertical-align:top;
}
.background .photo{
  position: absolute;
  width: 144rpx;
  height: 144rpx;
  top: 70rpx;
  left: 40%;
  text-align: center;
  border-radius: 50%;
}
.background .photo image{
  width: 100%;
  height: 100%;
  overflow: hidden;
  vertical-align: top;
  border-radius:50%;
}
.background .photo text{
  font-size: 14px;
  color: #ffffff;
}
.input{
  width: 91.11%;
  margin: 64rpx auto 0
}
.input input{
  
  height: 96rpx;
  padding-left: 30px;
  font-size: 16px;
  color: #333;
  margin-bottom: 32rpx;
}

.phone {
  margin:0 auto 32rpx;
  position:relative;
  border:1px solid #e0e0e0;
  height:96rpx;
}
.phone image {
  height:16px;
  width: 16px;
  top:17px;
  left:8px;
  right:8px;
  position:absolute;
}

button{
  background-color: #3399ff;
  color: #fff;
  border: 0px groove orange;
  box-shadow: 8px 10px 10px  #ccc;
  font-size: 20px
}
.btn-hover{
  box-shadow: 5px 6px 10px  #ccc;
  opacity: .7;
} 